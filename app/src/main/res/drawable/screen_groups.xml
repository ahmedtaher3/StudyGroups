<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#4eaffa" />
            <stroke
                android:width="1dp"
                android:color="#d2d2d2" />
            <corners
                android:radius="5dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#41a5f3"
                android:endColor="#41a5f3"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#d2d2d2" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>